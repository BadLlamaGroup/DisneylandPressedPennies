<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/machine_new_bg">



    <ImageView
        android:id="@+id/imgMac"
        android:layout_width="80dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/rowName"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="1"
        android:scrollHorizontally="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/imgMac"
        android:paddingStart="30dp"
        android:text="Name of machine"
        android:textColor="@android:color/black"
        android:textSize="24sp"/>

    <ImageView
        android:id="@+id/newCoin"
        android:layout_width="65dp"
        android:layout_height="53dp"
        android:scaleType="fitXY"
        android:src="@drawable/new_coins"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/offMac"
        android:layout_width="65dp"
        android:layout_height="53dp"
        android:scaleType="fitXY"
        android:src="@drawable/construction_mickey"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/rowDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rowName"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imgMac"
        android:text="Type of Coin: ???????"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/rowCollected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rowDescription"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imgMac"
        android:text="Not yet collected"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

</RelativeLayout>